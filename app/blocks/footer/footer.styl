.footer
    display flex
    flex-direction row
    justify-content center
    flex 0 0 auto
    padding 20px 0
    background lightColor
    box-shadow 0 -1px 0 0 #E9ECEF
    box-sizing border-box
.footer_mobile
    display none
    +responsive(xs)
        display flex
        margin-bottom 8px
.footer_desktop
    display flex
    +responsive(xs)
        display none
