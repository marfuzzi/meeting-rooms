.input
    position relative
    &__label
        display block
        font-weight 700
        margin-bottom 5px
    &__field
        width 100%
        padding 8px 10px
        border 2px solid #E9ECEF
        border-radius 4px
        letter-spacing 0.47px
        outline none
        box-sizing border-box
        &:hover
            border 2px solid #007DFF
        &:focus
            border 2px solid #007DFF
        &_recommendation
            margin-bottom 8px
            background #F2F3F4
            border-color #F2F3F4
            cursor pointer
            &:hover
                background #E9ECEF
                border-color #E9ECEF
            &:active
                background #DCDFE3
                border-color #DCDFE3
        &_meeting
            margin-bottom 8px
            color lightColor
            border 2px solid #007DFF
            background #007DFF
            &:hover
                background #0059FF
                border-color #0059FF
            &:active
                background #3C33FF
                border-color #3C33FF
