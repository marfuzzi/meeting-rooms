.main
    display flex
    flex-direction column
    width 100%
    height 100%
    &__timeline
        display flex
        flex-direction row
        align-items center
        height 46px
        width 100%
        background lightColor
        box-shadow 0 -1px 0 0 #E9ECEF inset
    &__schedule
        display flex
        height 100%
        position relative
        background #F6F7F9
        box-shadow 1px 0 0 0 #E9ECEF inset
        &:before
            content: ''
            position absolute
            height 100%
            width 245px
            background lightColor
