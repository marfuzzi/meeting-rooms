.overlay
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    background rgba(0,16,33,0.40)
    transition opacity 100ms
    visibility hidden
    opacity 0
    z-index 5
    &:target
        visibility visible
        opacity 1

.popup
    display flex
    flex-direction column
    align-items center
    margin 225px auto
    padding 32px 62px
    width 444px
    height 252px
    position relative
    background lightColor
    border-radius 8px
    text-align center
    transition all 5s ease-in-out
    box-shadow 0 1px 16px 0 rgba(0,44,92,0.28)
    box-sizing border-box
    &__logo
        width 50px
        height 50px
    &__button
        display flex
        flex-direction row
        align-items center
        margin-top 24px
    &__text
        font-size 15px
        margin 3px
