.room
    display flex
    align-items center
    height 44px
    padding 8px 0
    margin 8px 0
    box-sizing border-box
    &:hover .room__title
        font-weight 700
        color #0070E0
    +responsive(xs)
        height 58px
        padding 0
        margin-top 0
        margin-bottom 2px
    &__data
        width 245px
        padding-left 25px
        box-sizing border-box
        z-index 1
        +responsive(xs)
            width 211px
            padding 12px 25px 12px 16px
            background-color lightColor
    &__title
        font-weight 600
        font-size 15px
        white-space nowrap
    &__title_busy
        font-weight 600
        font-size 15px
        color #858E98
        &:hover
            font-weight 700
    &__events
        display flex
        flex-direction row
        flex-wrap nowrap
        position relative
        height 100%
        width calc(100% - 245px)
        background #D5DFE9
        +responsive(xs)
            width calc(100% - 211px)
    &__tooltip
        display none
        height 24px
        padding 4px 8px
        white-space nowrap
        background lightColor
        box-shadow 0 1px 8px 0 rgba(0,44,92,0.28)
        border-radius 4px
        font-weight 700
        font-size 11px
        letter-spacing 0.4px
        line-height 24px
        z-index 5
